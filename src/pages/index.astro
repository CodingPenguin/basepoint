	<meta property="og:title" content="Basepoint – Find the Perfect Workspace" />
	<meta property="og:description" content="Discover the best cafés & co-working spaces, and quiet spots with ratings for WiFi, noise, and vibes." />
	<meta property="og:url" content="https://basepoint.app" />
	<meta property="og:type" content="website" />

